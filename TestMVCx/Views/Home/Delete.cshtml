@model TestMVCx.Models.Player

@{
    ViewBag.Title = "Удаление записи";
}

<h3>Вы действительно хотите удалить этого игрока?</h3>
<div>
    <h4>Футболист</h4>
    <hr />
   
    <dl class="dl-horizontal">
        <dt>Имя игрока</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Возраст</dt>
        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>

        <dt>Позиция на поле</dt>
        <dd>
            @Html.DisplayFor(model => model.Position)
        </dd>

        <dt>Команда</dt>
        <dd>
            @ViewBag.TeamName
        </dd>

    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("К списку игроков", "FilterData")
        </div>
    }
</div>
